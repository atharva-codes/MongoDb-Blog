<%- include('partials/header'); %>
<!DOCTYPE html>
<html>
<head>
  <title>Edit Post</title>
</head>
<header class="masthead" style="background-image: url('assets/img/about-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Post Editing Page</h1>
                            <span class="subheading">Edit Any Post Here</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
<body>
  <h1>Edit Post</h1>
  <form action="/admin/edit/<%= post.postTitle %>" method="POST">
    <div>
      <label for="postTitle"> Post Title</label>
      <input type="text" name="postTitle" value="<%= post.postTitle %>">
    </div>
    <div>
      <label for="postSubHeading">Post Sub Heading</label>
      <input type="text" name="postSubHeading" value="<%= post.postSubHeading %>">
    </div>
    <div>
      <label for="postBody">Post Content</label>
      <textarea name="postBody" cols="30" rows="10"><%- post.postBody %></textarea>
    </div>
    <div>
      <label for="postCategory">Post Category</label>
      <select name="postCategory">
        <option value="WebDevelopment" <% if (post.postCategory === 'WebDevelopment') { %>selected<% } %>>Web Development</option>
        <option value="Coding" <% if (post.postCategory === 'Coding') { %>selected<% } %>>Coding</option>
      </select>
    </div>
    <div>
      <label for="postImage">Image URL</label>
      <input type="text" name="postImage" value="<%= post.postImage %>">
    </div>
    <button type="submit">Update Post</button>
  </form>
</body>
</html>

<%- include('partials/footer'); %>